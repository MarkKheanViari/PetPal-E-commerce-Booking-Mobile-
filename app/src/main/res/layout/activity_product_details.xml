<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".ProductDetailsActivity">

<!-- Toolbar (Fixed at the top) -->
<androidx.appcompat.widget.Toolbar
    android:id="@+id/toptoolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="6dp"
    android:paddingVertical="8dp"
    android:paddingHorizontal="16dp"
    app:layout_constraintTop_toTopOf="parent">

    <!-- Back Button (Aligned to start) -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:src="@drawable/back_button"
        android:contentDescription="@string/design_desc"/>

    <!-- Right Side Container for Cart and Report Buttons -->
    <LinearLayout
        android:id="@+id/right_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Cart Button -->
        <ImageView
            android:id="@+id/cartBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/cart"
            android:contentDescription="@string/design_desc"/>

        <!-- Report Flag Button -->
        <ImageView
            android:id="@+id/reportButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_report"
            android:layout_marginRight="20dp"
            android:contentDescription="Report Flag"/>
    </LinearLayout>
</androidx.appcompat.widget.Toolbar>

    <!-- Product Image (Sticky, outside ScrollView) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/toptoolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/productCard"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Product Image"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ScrollView for the main content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/top_container"
        app:layout_constraintBottom_toTopOf="@id/product_buttons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Product Name -->
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Product Price -->
            <TextView
                android:id="@+id/prduct_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±500.00"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/productName"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/likedBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/empty_heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Product Description -->
            <LinearLayout
                android:id="@+id/description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toBottomOf="@id/prduct_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Description"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"/>

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Product description goes here..."
                    android:textSize="14sp"
                    android:textAlignment="textStart"
                    android:textColor="#212121"
                    android:ellipsize="end"/>
            </LinearLayout>

            <!-- Rate This Product Section -->
            <LinearLayout
                android:id="@+id/rate_product_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/description_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate This Product"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:rating="0"
                    android:layout_marginTop="8dp"
                    android:theme="@style/RatingBarTheme"/>
            </LinearLayout>

            <!-- Percentage (Rating Distribution) -->
            <LinearLayout
                android:id="@+id/rating_distribution_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/rate_product_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 5 Star -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 star"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp"/>

                    <ProgressBar
                        android:id="@+id/progress_5_star"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:progressTint="@color/darker_orange"
                        android:background="@color/light_smth"/>

                    <TextView
                        android:id="@+id/percent_5_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- 4 Star -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 star"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp"/>

                    <ProgressBar
                        android:id="@+id/progress_4_star"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:progressTint="@color/darker_orange"
                        android:background="@color/light_smth"/>

                    <TextView
                        android:id="@+id/percent_4_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- 3 Star -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 star"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp"/>

                    <ProgressBar
                        android:id="@+id/progress_3_star"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:progressTint="@color/darker_orange"
                        android:background="@color/light_smth"/>

                    <TextView
                        android:id="@+id/percent_3_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- 2 Star -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 star"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp"/>

                    <ProgressBar
                        android:id="@+id/progress_2_star"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:progressTint="@color/darker_orange"
                        android:background="@color/light_smth"/>

                    <TextView
                        android:id="@+id/percent_2_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <!-- 1 Star -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 star"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp"/>

                    <ProgressBar
                        android:id="@+id/progress_1_star"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:progressTint="@color/darker_orange"
                        android:background="@color/light_smth"/>

                    <TextView
                        android:id="@+id/percent_1_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Customer Reviews (Average Rating and Total Ratings) -->
            <LinearLayout
                android:id="@+id/reviews_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/rating_distribution_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/reviews_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Reviews"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RatingBar
                        android:id="@+id/average_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        android:rating="0"
                        android:isIndicator="true"
                        android:theme="@style/RatingBarTheme"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/average_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 out of 5"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/total_ratings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 customer ratings"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Buttons (Fixed at the bottom) -->
    <LinearLayout
        android:id="@+id/product_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

        <!-- Add to Cart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addtocart_container"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="@color/smth_orange"
            android:text="Add to Cart"
            android:textAllCaps="false"
            app:cornerRadius="25dp" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>

        <!-- Buy Now Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buynow_container"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Buy Now"
            android:backgroundTint="@color/darker_orange"
            app:cornerRadius="25dp"
            android:textAllCaps="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>