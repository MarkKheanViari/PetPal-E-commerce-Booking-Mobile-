<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".VeterinaryAppointmentActivity">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="4dp"
        android:padding="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:src="@drawable/back_button"
            android:contentDescription="@string/design_desc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Veterinary"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:fontFamily="@font/alata"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:src="@drawable/baseline_receipt_24"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/design_desc"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule an Appointment!"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"/>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <ImageView
                android:id="@+id/serviceImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_container"
                android:src="@drawable/grooming_image"
                android:contentDescription="@string/design_desc"/>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/checkupTypeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Checkup Type"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:focusable="false"
                android:clickable="false"
                android:background="@android:color/transparent"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:hint="  Enter your name"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:background="@drawable/appointment_input_design"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:hint="  Enter your phone number"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLines="1"
                android:inputType="phone"
                android:background="@drawable/appointment_input_design"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="  Enter your Address"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:background="@drawable/appointment_input_design"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <EditText
                android:id="@+id/etPetName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="  Enter your pet’s name"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:background="@drawable/appointment_input_design"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/etPetBreed"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="  Enter your pet’s breed"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:background="@drawable/appointment_input_design"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="15sp"
                android:text="Pet Type:"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <RadioGroup
                android:id="@+id/radioPetType"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cat"/>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <RadioButton
                    android:id="@+id/rbDog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dog"/>

            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <EditText
                android:id="@+id/etNotes"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="  Notes"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:fontFamily="@font/alata"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/appointment_input_design"
                android:minHeight="80dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <Button
                android:id="@+id/btnPickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Date"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <Spinner
                android:id="@+id/spinnerPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/payment_methods"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <Button
                android:id="@+id/btnScheduleAppointment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schedule Appointment"
                android:backgroundTint="@color/orange"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
