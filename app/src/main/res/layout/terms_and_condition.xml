<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/termsToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="Terms and Conditions"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/back_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ScrollView with content -->
    <ScrollView
        android:id="@+id/termsScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/termsToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Section -->
            <TextView
                android:id="@+id/termsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="16dp"/>

            <!-- Introduction -->
            <TextView
                android:id="@+id/termsIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to PetPal. These Terms and Conditions govern your use of our application. By accessing and using our app, you agree to be bound by these terms."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp"/>

            <!-- Terms Sections -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Acceptance of Terms"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By using the app, you agree to these terms and any future modifications."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Use of the App"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You agree to use the app only for lawful purposes and in a manner that does not infringe the rights of others."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. User Responsibilities"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You are responsible for maintaining the confidentiality of your account and password and for restricting access to your device."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Limitation of Liability"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PetPal shall not be liable for any damages arising from your use or inability to use the app."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Changes to Terms"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We reserve the right to modify these terms at any time. Continued use of the app constitutes acceptance of any changes."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6. Governing Law"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="These terms shall be governed by the laws of [Your Jurisdiction]."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7. GCash refundable?"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gcash Payment is not Refundable. Please note that once your payment is confirmed, it is final and cannot be reversed or refunded. For any inquiries regarding payment or order issues, please contact our support team. Thank you so much for choosing our service."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp"/>

            <!-- Closing Note -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please review these terms carefully. If you do not agree with any part of these terms, please do not use our app. Thank you for choosing PetPal."
                android:textSize="16sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:background="#EEEEEE"
                android:padding="16dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>