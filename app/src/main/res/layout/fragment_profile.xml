<?xml version="1.0" encoding="utf-8"?>
<android.widget.ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:background="@color/white">

        <!-- Profile Header -->
        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cat"
            android:contentDescription="@string/design_desc"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Username -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/user_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>

        <!-- Email -->
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="17sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>

        <!-- Profile Section Header -->
        <TextView
            android:id="@+id/profile_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/user_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Profile Details Button -->
        <TextView
            android:id="@+id/profile_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_subtract_corners"
            android:text="   Profile Details"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:drawableStartCompat="@drawable/profile"
            app:layout_constraintTop_toBottomOf="@id/profile_section"
            android:layout_marginTop="10dp"/>

        <!-- Activity Section Header -->
        <TextView
            android:id="@+id/activity_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/profile_details"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Activity Buttons (My Liked Products, Order Details, Scheduled Services) -->
        <TextView
            android:id="@+id/liked_products"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_subtract_corners"
            android:text="   My Liked Products"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:drawableStartCompat="@drawable/ic_favorite_border"
            app:layout_constraintTop_toBottomOf="@id/activity_section"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/order_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_subtract_corners"
            android:text="   Order Details"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:drawableStartCompat="@drawable/order"
            app:layout_constraintTop_toBottomOf="@id/liked_products"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/scheduled_services"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_subtract_corners"
            android:text="   Scheduled Services"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:drawableStartCompat="@drawable/schedule"
            app:layout_constraintTop_toBottomOf="@id/order_details"
            android:layout_marginTop="10dp"/>

        <!-- Info and Support Section Header -->
        <TextView
            android:id="@+id/info_support_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info and Support"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/scheduled_services"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <!-- Info and Support Buttons (Help, About) -->
        <TextView
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_subtract_corners"
            android:text="   Help"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:drawableStartCompat="@drawable/help2"
            app:layout_constraintTop_toBottomOf="@id/info_support_section"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/add_subtract_corners"
            android:text="   About"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:drawableStartCompat="@drawable/aboutus"
            app:layout_constraintTop_toBottomOf="@id/help"
            android:layout_marginTop="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</android.widget.ScrollView>
