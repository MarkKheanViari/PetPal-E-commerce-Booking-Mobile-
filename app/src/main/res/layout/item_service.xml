<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Service Name -->
        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brushing"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp"/>

        <!-- Price -->
        <TextView
            android:id="@+id/servicePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price: $$"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/serviceDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, Est quisquam voluptatem qui aliquam molestiae 33 rerum impedit est quia soluta. Eos veritatis corporis est provident eius vel explicabo officiis sit commodi consequuntur."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:paddingBottom="8dp"/>

        <!-- Book Now Button -->
        <Button
            android:id="@+id/bookNowButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOK NOW"
            android:backgroundTint="@color/darker_orange"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>