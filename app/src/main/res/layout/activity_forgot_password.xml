<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back_button"
        android:contentDescription="@string/back_buttonDesc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:textSize="28sp"
        android:textColor="#AD570B"
        android:fontFamily="@font/alata"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contact Number Input -->
    <EditText
        android:id="@+id/contactInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_design"
        android:hint="Enter your contact number"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingHorizontal="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Send OTP Button -->
    <Button
        android:id="@+id/sendOtpButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Send OTP"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:fontFamily="@font/alata"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/contactInput"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- OTP Input -->
    <EditText
        android:id="@+id/otpInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_design"
        android:hint="Enter OTP"
        android:inputType="number"
        android:maxLength="6"
        android:paddingHorizontal="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/sendOtpButton"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- New Password Input -->
    <EditText
        android:id="@+id/newPasswordInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/login_design"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:maxLength="16"
        android:paddingHorizontal="20dp"
        android:textSize="15sp"
        android:fontFamily="@font/alata"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/otpInput"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Reset Password Button -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Reset Password"
        android:background="@drawable/button_background"
        android:textColor="@android:color/white"
        android:fontFamily="@font/alata"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/newPasswordInput"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>