<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#EFAD72"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/back_button"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profle"
            android:textSize="25sp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/alata"
            android:textColor="@color/black"/>

    </androidx.appcompat.widget.Toolbar>
    
    <Space
        android:id="@+id/spacer"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/spacer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- User Profile -->
        <ImageView
            android:id="@+id/user_profile"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/design_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="35dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="23sp"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:layout_gravity="start"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <!-- Edit Name -->
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/add_subtract_corners"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:drawableEnd="@drawable/edit_btn"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="23sp"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:layout_gravity="start"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <!-- Edit Name -->
            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/add_subtract_corners"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:drawableEnd="@drawable/edit_btn"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="23sp"
                android:fontFamily="@font/alata"
                android:textColor="@color/black"
                android:layout_gravity="start"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="10dp"/>

            <!-- Edit Name -->
            <EditText
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/add_subtract_corners"
                android:maxLines="1"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="15dp"
                android:drawableEnd="@drawable/edit_btn"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>

            <Button
                android:id="@+id/save_changesBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:layout_gravity="center"
                android:backgroundTint="@color/smth_orange"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>