<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/orderReceivedImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/delivery"
        android:contentDescription="Order Received Icon"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/orderReceivedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Received!"
        android:textSize="24sp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/continueShoppingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue Shopping"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        android:backgroundTint="@color/darker_orange"
        android:textColor="#FFFFFF"/>

</LinearLayout>