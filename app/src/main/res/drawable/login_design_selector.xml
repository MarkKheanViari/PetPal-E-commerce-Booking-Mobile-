<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#CF7627" /> <!-- Orange when focused -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <corners android:radius="10dp" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC" /> <!-- Gray when unfocused -->
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</selector>